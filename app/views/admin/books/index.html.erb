<h1>Listing books</h1>

<table>
  <tr>
    <th><a href="?sort_by=publisher_id">Publisher</a></th>
    <th><a href="?sort_by=title">Title</a></th>
    <th><a href="?sort_by=isbn">ISBN</a></th>
    <th colspan="3"></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><strong><%= book.publisher.name %></strong></td>
    <td><strong><%= book.title %></strong></td>
    <td><strong><%= book.isbn %></strong></td>
    <td><%= link_to 'Show', admin_book_path(book) %></td>
    <td><%= link_to 'Edit', edit_admin_book_path(book) %></td>
    <td><%= link_to 'Destroy', [:admin,book], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<%= will_paginate @books %>

<br />

<%= link_to 'New Book', new_admin_book_path %>
