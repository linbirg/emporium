<% if @author.errors.any? %>
  <ul>
    <% @author.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<h1>Create new author</h1>

<%= form_for :author, :url => admin_authors_path do |form| %>
    <%= render :partial => 'form', :object => form %>
    <%= form.submit 'Create' %>
<% end %>

<%= link_to 'Back', :action => 'index' %>

